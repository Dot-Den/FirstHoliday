
@{
    ViewData["Title"] = "Home Page";
}
  <script src="~/js/JavaScript.js"></script>

<body>
	<!-- Image Carousel -->

<div id="holidayCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item">
      <img src="~/img/carousel/Thailand1.png" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <img src="~/img/carousel/UnitedKingdom.png" class="d-block w-100">
    </div>
	<div class="carousel-item active">
	<img class="d-block w-100" src="img/carousel/CyprusHotel.jpg" alt="Third slide">
	<div class="carousel-caption">
		<div class="container">
			<div class="row justify-content-start text-left">
				<div class="col-7 bg-custom d-none d-lg-block py-3 px-0">
					<h3>Hotels at great prices!</h3>
					<p class="lead">Click our chat to find your perfect holiday!</p>
					<a href="#" class="btn btn-danger btn-lg">Holidays</a>
				</div>
			</div>
		</div>
	</div>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#holidayCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>

  <button class="carousel-control-next" type="button" data-bs-target="#holidayCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

	<!-- End Image Carousel -->

	<!-- Main Page Heading -->

<div class="col-12 text-center mt-5">
	<h1 class="text-dark pt-4">Find The Perfect Holiday</h1>
	<div class="border-top border-danger w-25 mx-auto my-3"></div>
	<p class="lead">Our chat box will find your dream holiday</p>
	<p class="lead">click the icon in the bottom right!</p>
</div>

	<!-- End Main Page Heading --

	<!-- Three Column Section -->
<div class="container">
	<div class="row my-5">

		<div class="col-md-4 my-4">
			<img src="~/img/Thailand.png" alt="" class="w-100 three-col-img">
			<h4 class="my-4">Thailand</h4>
			<p>Thailand is known for tropical beaches, exotic cuisine, magnificent temples and scenery, colourful history, or cultural and archaeological sites., opulent royal palaces, ancient ruins and ornate temples displaying figures of Buddha. </p>
			<a href="#" class="btn btn-outline-dark btn-md">Wowzers Link</a>
		</div>

		
		<div class="col-md-4 my-4">
			<img src="~/img/lastvegas.png" alt="" class="w-100 three-col-img">
			<h4 class="my-4">Las Vegas</h4>
			<p>Las Vegas has something for everyone. Although it is famous for being one of the most exciting nightlife destinations, it also has amazing museums, shows, and interactive activities to world-renowned restaurants and hotels, Vegas has it all.</p>
			<a href="#" class="btn btn-outline-dark btn-md">Wowzers Link</a>
		</div>

		
		<div class="col-md-4 my-4">
			<img src="~/img/CyprusHotel2.png" alt="" class="w-100 three-col-img">
			<h4 class="my-4">Cyprus</h4>
			<p>Cyprus is a delightful little island in the Mediterranean Sea and an absolutely wonderful travel destination. It's actually the third largest island in the Mediterranean and it has a great mixture of beautiful beaches, history, and nature.</p>
			<a href="#" class="btn btn-outline-dark btn-md">Wowzers Link</a>
		</div>

	</div>
</div>

	<!-- End Three Column Section -->

	<!-- Chat Bot -->

	<!-- Icon -->
<div id="chatbot-icon" class="chatbot-icon">
<i class="far fa-comments"></i>
</div>

<!-- Chat box -->

<div id="chatbot-header" class="chatbot-header"></div>


<div id="chatbot-box" class="container-fluid chatbot-box hidden">
	<img id ="qstStartTextImg" class="loadTextImage hidden" src="~/img/loadingdots.gif"/>
	<div id="qstStart" class="msg-container right ">	
		<p class="msg">Hello! I will be your interactive chat bot for today, please answer the questions to get a recommendation by clicking the buttons below!</p>
	</div>

	<div id="msgStart" class="msg-container left">
		<btn id="msgStartBtn" class="responseBtn msg btn btn-outline-primary">Find my dream holiday!</btn>
	</div>
	
	<img id ="QstTerrainTextImg" class="loadTextImage hidden" src="~/img/loadingdots.gif"/>
	<div id="QstTerrain" class="msg-container right hidden">
		<p class="msg">What kind of location do you prefer?</p>
	</div>

	<div id="msgTerrain" class="question msg-container left hidden">
				<btn id="msgTerrainBtn1" class="responseBtn msg btn btn-outline-primary">Mountain</btn>
		<btn id="msgTerrainBtn2" class="responseBtn msg btn btn-outline-primary">City</btn>
		<btn id="msgTerrainBtn3" class="responseBtn msg btn btn-outline-primary">Sea</btn>
	</div>

	<img id ="qstStarRatingTextImg" class="loadTextImage hidden" src="~/img/loadingdots.gif"/>
	<div id="qstStarRating" class="msg-container right hidden">
		<p class="msg">What is the minimum star rating you are willing to accept?</p>
	</div>

	<div id="msgStarRating" class="question msg-container left hidden">
		<btn id="msgStarRatingBtn1" class="responseBtn msg btn btn-outline-primary">1*</btn>
		<btn id="msgStarRatingBtn2" class="responseBtn msg btn btn-outline-primary">2*</btn>
		<btn id="msgStarRatingBtn3" class="responseBtn msg btn btn-outline-primary">3*</btn>
		<btn id="msgStarRatingBtn4" class="responseBtn msg btn btn-outline-primary">4*</btn>
		<btn id="msgStarRatingBtn5" class="responseBtn msg btn btn-outline-primary">5*</btn>
	</div>

	<img id ="qstTemperatureTextImg" class="loadTextImage hidden" src="~/img/loadingdots.gif"/>
	<div id="qstTemperature" class="msg-container right hidden">
		<p class="msg">What kind of weather would you enjoy most?</p>
	</div>

	<div id="msgTemperature" class="question msg-container left hidden">
		<btn id="msgTemperatureBtn1" class="responseBtn msg btn btn-outline-primary">Cold</btn>
		<btn id="msgTemperatureBtn2" class="responseBtn msg btn btn-outline-primary">Mild</btn>
		<btn id="msgTemperatureBtn3" class="responseBtn msg btn btn-outline-primary">Hot</btn>
	</div>


	<img id ="qstNightlifeTextImg" class="loadTextImage hidden" src="~/img/loadingdots.gif"/>
	<div id="qstNightlife" class="msg-container right hidden">
		<p class="msg">Do you want a bustling nightlife or a quiet night by the fire?</p>
	</div>

	<div id="msgNightlife" class="question msg-container left hidden">
		<btn id="msgNightlifeBtn1" class="responseBtn msg btn btn-outline-primary">Quiet</btn>
		<btn id="msgNightlifeBtn2" class="responseBtn msg btn btn-outline-primary">Average</btn>
		<btn id="msgNightlifeBtn3" class="responseBtn msg btn btn-outline-primary">Bustling</btn>
	</div>

	
	<img id ="qstLocTypeTextImg" class="loadTextImage hidden" src="~/img/loadingdots.gif"/>
	<div id="qstLocType" class="msg-container right hidden">
		<p class="msg">Do you want to relax, have fun or both?</p>
	</div>

	<div id="msgLocType" class="question msg-container left hidden">
		<btn id="msgLocTypeBtn1" class="responseBtn msg btn btn-outline-primary">Chill</btn>
		<btn id="msgLocTypeBtn2" class="responseBtn msg btn btn-outline-primary">Have Fun!</btn>
		<btn id="msgLocTypeBtn3" class="responseBtn msg btn btn-outline-primary">Both</btn>
	</div>

	<div id="holidayRedirect" class="hidden">
	<p id="findingHoliday">Finding your holiday</p>
		<img id="loadingHoliday" src="~/img/loadingdots.gif"/>
	</div>

</div>

	<!-- End Chat Bot -->

</body>

<script type="text/javascript">

	//Chat Bot button options
	var desiredTerrain;
	var desiredMinStarRating;
	var desiredTemperature;
	var desiredNightlife;
	var desiredLocType;

	//Popup for Chat Bot
	$('#chatbot-icon').click(function(){
		if($('#chatbot-box').hasClass('hidden'))
		{
			$('#chatbot-box').removeClass('hidden');
			$('#chatbot-box').css({"height" : "70vh", "width" : "400px", "border" : "solid 2px"});
			$('#chatbot-header').css({"height" : "50px", "width" : "400px", "bottom" : "70vh", "border" : "solid 2px"});
			setTimeout(function(){
				$('#qstStartTextImg').addClass('hidden');
			}, 1200);
		}else
		{
			$('#chatbot-box').addClass('hidden');
			$('#chatbot-box').css({"height" : "0px", "width" : "0px", "border" : "0px"});
			$('#chatbot-header').css({"height" : "0px", "width" : "0px", "bottom" : "0px", "border" : "0px"});
		}
	});

	//On click of Chat Bot buttons

	//start message
	$('#msgStart').click(function(){
		$('#msgStartBtn').removeClass('btn-outline-primary').addClass('btn-primary');
		$('#QstTerrainTextImg').removeClass('hidden');
			setTimeout(function(){
				$('#QstTerrainTextImg').addClass('hidden');
				$('#QstTerrain').removeClass('hidden');
				$('#msgTerrain').removeClass('hidden');
			}, 1200);
	});

	//Question 1 - Terrain
