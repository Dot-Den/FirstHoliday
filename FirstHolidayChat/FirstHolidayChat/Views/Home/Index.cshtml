		$('#msgLocTypeBtn1').addClass('hidden');
		$('#msgLocTypeBtn2').addClass('hidden');
		$('#holidayRedirect').removeClass('hidden');
		desiredLocType = "Both";
		$('#chatbot-box').scrollTop(9999);
		postHolidaySpec();
	});

	//Post and redirect for holiday chat box
	function postHolidaySpec(){
		var url = '@Url.Action("holidaySuggestions", "Holiday")';
		url += '?terrainType=' + desiredTerrain + '&nightLife=' + desiredNightlife + '&StarRating=' + desiredMinStarRating + '&temperature=' + desiredTemperature + '&holCategory=' + desiredLocType;
		window.location.href = url;
	}

